
<section class="page-width" style="padding-top: {{ section.settings.padding_top }}px;  padding-bottom: {{ section.settings.padding_bottom }}px">
      {% unless section.settings.title == blank %}
        <div class="flex items-center justify-between mb-10">
        <h2 class="text-black font-bold sm:text-2xl text-base"> {{ section.settings.title | escape }}</h2>
        <a class="flex items-center md:text-base text-xs  " href="{{ collection.url }}">
         <h1 class="mr-2"> Browse all categories </h1>
          {% render 'icon-arrow', class: '' %}
        </a>
      </div>
      {% endunless %}

    <div class= "grid grid-cols-1  gap-10  ">
      <div class="collection-list flex md:space-x-6 space-x-2 ">
    {%- for block in section.blocks -%}
              {% render 'card-collection', card_collection: block.settings.collection , media_aspect_ratio: section.settings.image_ratio, class: 'collection' %}
          {%- endfor -%}
          
        </div>
       
    </div>
</section>
{% schema %}
{
  "name": "collection list",
  "max_blocks": 10,
  "settings": [
    {
      "type": "text",
      "id": "title",
      "default": "Shop by collection",
      "label": "Header"
    },
    {
    "type": "select",
  "id": "image_ratio",
  "options": [
    {
      "value": "in-between",
      "label": "option_1"
    },
    {
      "value": "square",
      "label": "option_2"
    }
  ],
  "default": "square",
  "label": "option_3"
},
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top padding",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom padding",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "featured_collection",
      "name": "featured collection",
      "settings": [
        {
          "type": "collection",
          "id": "collection",
          "label": "Featured collection"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "collection-list",
      "blocks": [
        {
          "type": "featured_collection"
        },
        {
          "type": "featured_collection"
        },
        {
          "type": "featured_collection"
        }
      ]
    }
  ]
}
{% endschema %}