<section class="page-width" style="padding-top: {{ section.settings.padding_top }}px;  padding-bottom: {{ section.settings.padding_bottom }}px">
      {% unless section.settings.title == blank %}
        <h2 class="text-center text-black font-bold text-3xl"> {{ section.settings.title | escape }}</h2>
      {% endunless %}

    <div class= "grid grid-cols-1  gap-6 mt-6">
      <div class="flex place-content-center overflow-x-scroll grid-cols-4 gap-3 snap-x snap-mandatory" x-ref="slider" 
        @keydown.right="next"
        @keydown.left="prev">
    {%- for block in section.blocks -%}
              {% render 'card-collection', card_collection: block.settings.collection , media_aspect_ratio: section.settings.image_ratio, class: 'w-full snap-start flex-shrink-0 col-span-2' %}
          {%- endfor -%}
        </div>
          {% comment %} <button @click="prev" class="text-3xl font-medium absolute top-1/2 transform -translate-y-1/2 left-0 bg-white p-1 md:hidden">
          <span aria-hidden="true">❮</span>
          <span class="sr-only">Previous slide</span>
      </button>

      <button @click="next" class="text-3xl font-medium absolute top-1/2 transform -translate-y-1/2 right-0 bg-white p-1 md:hidden">
          <span aria-hidden="true">❯</span>
          <span class="sr-only">Next slide</span>
      </button> {% endcomment %}
    </div>
</section>
{% schema %}
{
  "name": "collection list",
  "max_blocks": 4,
  "settings": [
    {
      "type": "text",
      "id": "title",
      "default": "Shop by collection",
      "label": "Header"
    },
    {
    "type": "select",
  "id": "image_ratio",
  "options": [
    {
      "value": "rounded",
      "label": "option_1"
    },
    {
      "value": "in-between",
      "label": "option_2"
    },
    {
      "value": "square",
      "label": "option_3"
    }
  ],
  "default": "square",
  "label": "option_3"
},
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top padding",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom padding",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "featured_collection",
      "name": "featured collection",
      "settings": [
        {
          "type": "collection",
          "id": "collection",
          "label": "Featured collection"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "collection-list",
      "blocks": [
        {
          "type": "featured_collection"
        },
        {
          "type": "featured_collection"
        },
        {
          "type": "featured_collection"
        }
      ]
    }
  ]
}
{% endschema %}