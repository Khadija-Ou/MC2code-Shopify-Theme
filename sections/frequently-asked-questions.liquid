<div class="page-width">
    <section class="text-gray-700">
      <div class="container px-5 py-24 mx-auto">
        <div class="text-center mb-20">
            {% unless section.settings.title == blank %}
                <h1 class="sm:text-3xl text-2xl font-medium text-center title-font text-gray-900 mb-4">
                    {{ section.settings.title | escape }}
                </h1>
            {% endunless %}
            {% unless section.settings.text == blank %}
                <p class="text-base leading-relaxed xl:w-2/4 lg:w-3/4 mx-auto">
                    {{ section.settings.text }}
                </p>
            {% endunless %}
        </div>
        <div class="flex flex-wrap lg:w-4/5 sm:mx-auto sm:mb-2 -mx-2">
            {%- for block in section.blocks -%}
          <div class="w-full lg:w-1/2 px-4 py-2">
            <div class="py-5">
                    <details class="group">
                        <summary class="flex justify-between items-center font-medium cursor-pointer list-none">
                            {%- if block.settings.question != blank -%}
                                <span>{{ block.settings.question | escape }}</span>
                            {%- else -%}  
                                <span>Please enter your question</span>
                            {%- endif -%}
                                <span class="transition group-open:rotate-180">
                                    {% render 'icon-small-arrow' %}
                                </span>
                            </summary>

                            <p class="text-neutral-600 mt-3 group-open:animate-fadeIn">
                                {%- if block.settings.answer != blank -%}
                                   {{ block.settings.answer | escape }}
                                {%- else -%}  
                                Please enter the answer for your question üòÅ .
                                {%- endif -%}
                            </p>
                    </details>
                </div>
            </div>
        {%- endfor -%}
        </div>
      </div>
    </section>
  </div>


{% schema %}

{
    "name": "frequently asked question",
    "max_blocks": 8,
    "settings": [
        {
            "type": "text",
            "id": "title",
            "label": "Heading",
            "default":"Frequently Asked Question"
        },
        {
            "type": "richtext",
            "id": "text",
            "label":"Description",
            "default": "<p>The most common questions about how our business works and what can do for you</p>"
        },
        {
            "type": "header",
            "content": "SECTION PADDING"
          },
          {
            "type": "range",
            "id": "padding_top",
            "min": 0,
            "max": 100,
            "step": 4,
            "unit": "px",
            "label": "Top padding",
            "default": 36
          },
          {
            "type": "range",
            "id": "padding_bottom",
            "min": 0,
            "max": 100,
            "step": 4,
            "unit": "px",
            "label": "Bottom padding",
            "default": 36
          }
    ],
    "blocks": [
        {
            "type": "text",
            "name": "question",
            "settings": [
                {
                    "type": "text",
                    "id": "question",
                    "label": "question",
                    "default":"what do we do?"
                },
                {
                    "type": "richtext",
                    "id": "answer",
                    "label": "Enter the answer",
                    "default": "<p> There are many variations of passages of Lorem Ipsum available, but the majority have suffered alteration in some form, by injected humour, or randomised words which don't look even slightly believable</p>"
                }
            ]
        }
    ],
    "presets": [
        {
            "name": "frequently-asked-question"
        }
    ]
}

{% endschema %}
