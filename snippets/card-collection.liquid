<div class="relative ">
  <div  class="md:h-[300px] md:w-[300px] h-[200px] w-[200px] overflow-hidden {% if  media_aspect_ratio == 'portrait' %} rounded-lg {% elsif  media_aspect_ratio == 'Square' %} rounded-full {% else %} {%-endif-%}">
      {%- if card_collection.featured_image -%}
            <img class="object-cover w-full h-full " src="{{ card_collection.featured_image | image_url: width: 1500 }}" loading="lazy" alt="img" >
            {%- else -%}
            {{ 'collection-4' | placeholder_svg_tag: 'object-cover w-[100%] h-[100%] border-2' }}
          {%- endif -%}
        </div>
      
        <div  class="card-styles absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 h-full w-full overflow-hidden {% if  media_aspect_ratio == 'portrait' %} rounded-lg {% elsif  media_aspect_ratio == 'Square' %} rounded-full {% else %} {%-endif-%}">
           <a href="{{ card_collection.url }}" class="text-white font-bold text-center  text-base lg:text-xl  w-[100%] h-[100%] flex justify-center items-end pb-8 " >
              {%- if card_collection.title != blank -%}
                {{- card_collection.title | escape -}}
              {%- else -%}
                Collection Name
              {%- endif -%}

            </a>

          </div>
</div>
